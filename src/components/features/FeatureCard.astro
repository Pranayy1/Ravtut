---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 border border-slate-100">
  <div class="text-4xl mb-4 bg-slate-100 w-16 h-16 flex items-center justify-center rounded-lg">{icon}</div>
  <h3 class="text-xl font-semibold text-primary mb-3">{title}</h3>
  <p class="text-slate-600 leading-relaxed">{description}</p>
</div>