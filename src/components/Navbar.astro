---
import Logo from './common/Logo.astro';
import NavLinks from './navigation/NavLinks.astro';
import PrimaryButton from './buttons/PrimaryButton.astro';
---

<header class="bg-white border-b border-slate-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20">
      <div class="flex items-center space-x-3">
        <Logo className="w-12 h-12" />
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
          RavTut
        </a>
      </div>
      
      <NavLinks />
      
      <div class="flex items-center">
        <PrimaryButton href="/login" label="Login" />
      </div>
    </div>
  </nav>
</header>