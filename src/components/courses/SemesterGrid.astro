---
interface Props {
  courseSlug: string;
}

const { courseSlug } = Astro.props;
const semesters = Array.from({ length: 8 }, (_, i) => i + 1);
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-6">
  {semesters.map(semester => (
    <a href={`/rgpv-notes/${courseSlug}/semester-${semester}`} class="block">
      <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 text-center">
        <h3 class="text-xl font-semibold text-primary">Semester {semester}</h3>
        <p class="text-sm text-slate-500 mt-2">View subjects and materials</p>
      </div>
    </a>
  ))}
</div>